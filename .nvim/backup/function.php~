add_action( 'init', 'bsv_register_cpt' );
function bsv_register_cpt() {
	$labels = array(
		"name" => "News",
		"singular_name" => "News",
		"menu_name" => "News",
		"all_items" => "All News",
		"add_new" => "Add News",
		"add_new_item" => "Add New News",
		"edit" => "Edit",
		"edit_item" => "Edit News",
		"new_item" => "New News",
		"view" => "View",
		"view_item" => "View News",
		"search_items" => "Search News",
		"not_found" => "No News found",
		"not_found_in_trash" => "No News found in Trash",
		"parent" => "Parent News",
		);

	$args = array(
		"labels" => $labels,
		"description" => "Site news",
		"public" => false,
		"show_ui" => true,
		"has_archive" => false,
		"show_in_menu" => true,
		"exclude_from_search" => false,
		"capability_type" => "post",
		"map_meta_cap" => true,
		"hierarchical" => false,
		"rewrite" => array( "slug" => "news", "with_front" => true ),
		"query_var" => true,
		"menu_position" => 26,"menu_icon" => "dashicons-info",
		"supports" => array( "title", "editor", "comments", "revisions", "thumbnail", "author" ),
		"taxonomies" => array( "category", "post_tag" )
	);
	register_post_type( "news", $args );

	$labels = array(
		"name" => "Tours",
		"singular_name" => "Tour",
		"menu_name" => "Tours",
		"all_items" => "All Tours",
		"add_new" => "Add New",
		"add_new_item" => "Add New Tour",
		"edit" => "Edit",
		"edit_item" => "Edit Tour",
		"new_item" => "New Tour",
		"view" => "View",
		"view_item" => "View Tour",
		"search_items" => "Search Tour",
		"not_found" => "No Tour found",
		"not_found_in_trash" => "No Tour found in Trash",
		"parent" => "Parent Tour",
		);

	$args = array(
		"labels" => $labels,
		"description" => "Tour offers",
		"public" => false,
		"show_ui" => true,
		"has_archive" => false,
		"show_in_menu" => true,
		"exclude_from_search" => false,
		"capability_type" => "post",
		"map_meta_cap" => true,
		"hierarchical" => false,
		"rewrite" => array( "slug" => "tours", "with_front" => true ),
		"query_var" => true,
		"menu_position" => 27,"menu_icon" => "dashicons-palmtree",
		"supports" => array( "title", "editor", "comments", "revisions", "thumbnail", "author", "page-attributes" ),
		"taxonomies" => array( "category", "post_tag" )
	);
	register_post_type( "tours", $args );

	$labels = array(
		"name" => "Акции",
		"singular_name" => "Акция",
		"menu_name" => "Акции",
		"all_items" => "Все Акции",
		"add_new" => "Добавить Акцию",
		"add_new_item" => "Добавить новую Акцию",
		"edit" => "Edit",
		"edit_item" => "Редактировать Акцию",
		"new_item" => "Новая Акция",
		"view" => "View",
		"view_item" => "Просмотр Акции",
		"search_items" => "Поиск Акции",
		"not_found" => "Акция не найдена",
		"not_found_in_trash" => "Акция не найдена в корзине",
		"parent" => "Parent Hot-Deal",
		);

	$args = array(
		"labels" => $labels,
		"description" => "Горящие предложения",
		"public" => false,
		"show_ui" => true,
		"has_archive" => false,
		"show_in_menu" => true,
		"exclude_from_search" => false,
		"capability_type" => "post",
		"map_meta_cap" => true,
		"hierarchical" => false,
		"rewrite" => array( "slug" => "hot_deal", "with_front" => true ),
		"query_var" => true,
		"menu_position" => 28,"menu_icon" => "dashicons-megaphone",
		"supports" => array( "title", "editor", "custom-fields", "comments", "thumbnail", "author", "page-attributes" ),
		"taxonomies" => array( "category", "post_tag" )
	);
	register_post_type( "hot_deal", $args );

// End of cptui_register_my_cpts()
}

